@model PressentaitionLayer.Account.LoginModel;
@{
    ViewData["Title"] = "Login";
}

<div class="row">

    <div class="col-md-5">

        <h2>Login with your credentials</h2>
        @if (!ViewContext.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="username">@Html.DisplayNameFor(m => m.UserName)</label>
                    <input type="text" class="form-control" placeholder="@Html.DisplayNameFor(m => m.UserName)"
                           id="username" name="username" asp-for="UserName" />
                </div>
                <div class="form-group">
                    <label for="password">@Html.DisplayNameFor(m => m.Password)</label>
                    <input type="password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)"
                           id="password" name="password" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label><input type="radio" class="radio-inline" name="account_type" asp-for="UserType" value="Buyer" />Buyer<br /></label>
                    <label><input type="radio" class="radio-inline" name="account_type" asp-for="UserType" value="Seller" />Seller<br /></label>
                    <label><input type="radio" class="radio-inline" name="account_type" asp-for="UserType" value="Admin" />Admin<br /></label>
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Submit</button>
            </form>
    </div>
</div>