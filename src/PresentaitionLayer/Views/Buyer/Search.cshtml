@model IEnumerable<Tuple<ApplicationCore.Entitites.ShopProduct, Guid>>
@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Product Name
            </th>
            <th>
                Shop Guid
            </th>
            <th>
                Product Category
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/Random/23.jpg" alt="@Html.DisplayFor(modelItem => item.Item1.Product.Name)" style="width:80px; height:80px;"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item2);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Price)
                </td>
                <td>
                    <form asp-action="AddToCart" class="form-control" style="height:44px; padding:6px 12px">
                        <label>
                            Quantity
                            <input type="number" min="1" max=@item.Item1.Quantity name="Quantity" placeholder="1"/>
                        </label>
                        <input type="hidden" name="ShopId" value="@item.Item2" />
                        <input type="hidden" name="ItemId" value="@item.Item1.Guid" />
                        <input type="submit" value="Add items to cart" class="input-sm"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>